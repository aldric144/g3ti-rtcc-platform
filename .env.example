# G3TI RTCC-UIP Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=change-me-in-production-use-strong-key-at-least-32-chars

# =============================================================================
# API Settings
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_V1_PREFIX=/api/v1

# =============================================================================
# Database Settings
# =============================================================================
# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=rtcc_neo4j_password

# Elasticsearch
ELASTICSEARCH_HOSTS=http://localhost:9200

# Redis
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Celery Settings
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# Security Settings
# =============================================================================
# JWT
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# Integration API Keys (Optional)
# =============================================================================
# Milestone VMS
MILESTONE_API_URL=
MILESTONE_API_KEY=

# Flock Safety LPR
FLOCK_API_URL=
FLOCK_API_KEY=

# ShotSpotter
SHOTSPOTTER_API_URL=
SHOTSPOTTER_API_KEY=

# OneSolution RMS
ONESOLUTION_API_URL=
ONESOLUTION_API_KEY=

# NESS
NESS_API_URL=
NESS_API_KEY=

# Body-Worn Camera
BWC_API_URL=
BWC_API_KEY=

# HotSheets
HOTSHEETS_API_URL=
HOTSHEETS_API_KEY=

# =============================================================================
# Frontend Settings
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/api/v1/realtime/ws/events
MAPBOX_TOKEN=

# =============================================================================
# Logging Settings
# =============================================================================
LOG_LEVEL=INFO
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# =============================================================================
# WebSocket Settings
# =============================================================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000
